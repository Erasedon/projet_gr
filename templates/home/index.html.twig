{% extends 'base.html.twig' %}

{% block title %}Hello ScanController!{% endblock %}

{% block body %}


<div class="container my-3 d-flex justify-content-center form-auth">
<div class="d-flex justify-content-center">
  <div >
        <button type="submit" class="btn btn-gr d-block mt-3 my-5 fs-1" id="startButton">Scanner</button>
      </div>
    </div>
  <div id="display">
    <div class="card px-5 py-3 bg-light radius">
      <h1 class="display-5 mb-3">Scan QR Code </h1>

      <div class="d-flex justify-content-center">
     
        <button type="submit" class="btn btn-gr d-block mt-3 my-5 fs-1" id="resetButton">Redemarrer</button>

      </div>

      <div class="mt-3 d-flex justify-content-center">
        <video id="video" style="border: 1px solid gray"></video>
      </div>

      <div id="sourceSelectPanel" style="display:none">
        <label for="sourceSelect">Changer de source video:</label>
        <select id="sourceSelect" style="max-width:400px; margin: 10px">
        </select>
      </div>

      <div style="display: none">
        <label for="decoding-style"> Decoding Style:</label>
        <select id="decoding-style" size="1">
          <option value="once">Decode once</option>
          <option value="continuously">Decode continuously</option>
        </select>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="https://unpkg.com/@zxing/library@latest"></script>
{% block javascript %}
{{ encore_entry_script_tags('scan') }}
{% endblock %}

{% endblock %}