{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}


{% block body %}

<div class="container">
<div class="quiz-container" id="quiz">
    <div class="quiz-header">
     {% for quizz in quizzs %}
  
      <h2 id="question">{{ quizz.Question }}</h2>
      <ul>
        <li>
          <input type="radio" name="answer" id="a" class="answer" />
          <label for="a" id="a_text">{{ quizz.Reponse1}}</label>
        </li>
        <li>
          <input type="radio" name="answer" id="b" class="answer" />
          <label for="b" id="b_text">{{ quizz.Reponse2}}</label>
        </li>
        <li>
          <input type="radio" name="answer" id="c" class="answer" />
          <label for="c" id="c_text">{{ quizz.Reponse3}}</label>
        </li>
        <li>
          <input type="radio" name="answer" id="d" class="answer" />
          <label for="d" id="d_text">{{ quizz.Reponse4}}</label>
        </li>

      </ul>
      {% endfor %}

    </div>
    <button id="submitquizz">Valider</button>
  </div>
</div>
{% block javascript %}
            {{ encore_entry_script_tags('quizz') }}
    {% endblock %}

{% endblock %}



 
