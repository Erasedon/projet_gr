			<td>{{userlist.prenom}} {{userlist.nom}}</td>
			<td>-
			</td>
			<td>{{ userlist.stand1 ? '✅' : '❌' }}</td>
			<td>{{ userlist.stand2 ? '✅' : '❌' }}
			</td>
			<td>{{ userlist.stand3 ? '✅' : '❌' }}
			</td>
			<td>{{ userlist.stand4 ? '✅' : '❌' }}
			</td>
			<td>{{ userlist.stand5 ? '✅' : '❌' }}
			</td>
			<td>{{ userlist.classement}} Points
			</td>
		</tr>
		
	  {% endfor %}
	

   

     
     
    </tbody>
  </table>

</div>
</div>
{% endblock %}
